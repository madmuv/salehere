<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.goal.GoalFragment">

    <LinearLayout
        android:id="@+id/view_goal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yello_E4A323w"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_goal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_thai_bold"
            android:text="@string/what_is_your_goal_label"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_goal_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/goal_type_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/bt_travel"
            android:button="@null" />

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/bt_education"
            android:button="@null" />

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/bt_invest"
            android:button="@null" />


        <RadioButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/bt_clothing"
            android:button="@null" />
    </RadioGroup>

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_edittext"
        android:fontFamily="@font/ibm_plex_sans_thai_regular"
        android:hint="@string/amount_label"
        android:padding="16dp"
        android:textColor="@color/red_CA5D48"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_edittext"
        android:cursorVisible="false"
        android:drawableRight="@drawable/ic_arrow_down"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/ibm_plex_sans_thai_regular"
        android:hint="@string/select_date_label"
        android:padding="16dp"
        android:textColor="@color/red_CA5D48"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ibm_plex_sans_thai_bold"
        android:text="@string/bank_account_label"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/goal_bank_dropdown"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_edittext"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/et_baht_per_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_edittext"
        android:fontFamily="@font/ibm_plex_sans_thai_regular"
        android:padding="16dp"
        android:textColor="@color/red_CA5D48"
        android:textSize="14sp" />
</LinearLayout>